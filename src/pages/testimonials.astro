---
import Base from "../layouts/Base.astro";
import { testimonials } from "../data/testimonials";
---
<Base
  title="Testimonials | Cusoon Pools"
  description="Read what Exeter and Seacoast homeowners say about Cusoon Pools' cleaning and repair service."
  canonical="https://cusoon-pools.com/testimonials/"
>
  <section class="py-16">
    <div class="container">
      <p class="text-xs uppercase tracking-[0.4em] text-sea">Testimonials</p>
      <h1 class="mt-3 font-display text-4xl sm:text-5xl">Real feedback from our neighbors.</h1>
      <div class="mt-12 grid gap-6 md:grid-cols-2">
        {testimonials.map((testimonial) => (
          <article class="rounded-3xl border border-sand bg-white p-6 shadow-lift">
            <p class="text-ink/80">“{testimonial.quote}”</p>
            <p class="mt-4 text-sm font-semibold">{testimonial.name}</p>
            <p class="text-xs uppercase tracking-[0.2em] text-ink/50">{testimonial.location}</p>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
