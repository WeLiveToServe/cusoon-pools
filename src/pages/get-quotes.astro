---
import Base from "../layouts/Base.astro";
import QuoteForm from "../components/QuoteForm.astro";
---
<Base
  title="Get Quotes | Cusoon Pools"
  description="Request a quote from Cusoon Pools for cleaning, repair, or seasonal pool service in Exeter and the Seacoast."
  canonical="https://cusoon-pools.com/get-quotes/"
>
  <section class="pt-6 pb-12">
    <div class="container grid gap-10 lg:grid-cols-[0.95fr_1.05fr] lg:items-center">
      <div class="text-center">
        <p class="text-sm font-medium uppercase tracking-[0.3em] text-ink/60 sm:text-lg">Get Quotes</p>
        <h1 class="mt-2 font-display text-2xl sm:text-3xl">Tell us about your pool.</h1>
        <p class="mt-3 text-sm text-ink/70">No pressure. We will follow up with clear options and next steps.</p>
      </div>
      <QuoteForm showPanels={true} submitLabel="Free Quote" />
    </div>
  </section>
</Base>
